<div class="row">
    <div class="col-6 offset-3">
        <h1 class="h1 text-center">Sign Up</h1>
        <%= bootstrap_form_for(:session, url: sessions_path) do |f| %>
        <p>Login with either: </p>
            <%= f.text_field :name %>
            <p>Or</p>
            <%= f.text_field :username %>
            <p>Or</p>
            <%= f.email_field :email %>

            <%= f.submit "Sign Up" %>
        <% end %>
    </div>
</div>
