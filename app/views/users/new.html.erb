<div class="row">
    <div class="col-6 offset-3">
        <h1 class="h1 text-center">Sign Up</h1>
        <%= bootstrap_form_for(@user) do |f| %>
            <%= f.text_field :name %>
            <%= f.text_field :username %>
            <%= f.email_field :email %>

            <%= f.submit "Sign Up" %>
        <% end %>
    </div>
</div>
